<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/teal_200"
        tools:context=".BookDoctor">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    app:layout_constraintBaseline_toBaselineOf="parent">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="2">

<TextView
    android:id="@+id/textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_marginTop="60dp"
    android:layout_marginEnd="105dp"
    android:layout_marginRight="130dp"
    android:gravity="center"
    android:textColor="#101112"
    android:textSize="30dp"
    android:layout_alignParentRight="true"
    android:text="Book Doctors Here"
    android:textStyle="bold"/>
</RelativeLayout>

<GridLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="8"
    android:columnCount="1"
    android:rowCount="3"
    android:alignmentMode="alignMargins"
    android:columnOrderPreserved="false"
    android:padding="15dp">

<androidx.cardview.widget.CardView
    android:id="@+id/book1"
    app:cardBackgroundColor="#2196F3"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_margin="15dp"
    android:orientation="vertical">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/images"></ImageView>

<TextView
    android:id="@+id/txtJuma"
    android:textColor="#000305"
    android:layout_width="108dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:text="Dr. Isaac Juma"
    android:textAlignment="center"
    android:textSize="20dp">

</TextView>
</LinearLayout>
</androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
    android:id="@+id/book2"
    app:cardBackgroundColor="#009688"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_margin="15dp"
    android:orientation="vertical">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/index"></ImageView>
<TextView
    android:id="@+id/txtWafula"
    android:textColor="#000305"
    android:layout_width="108dp"
    android:layout_height="wrap_content"
    android:text="Dr.Wafula David"
    android:textSize="20dp"
    android:textAlignment="center"
    android:layout_gravity="center_horizontal">

</TextView>
</LinearLayout>
</androidx.cardview.widget.CardView>



<androidx.cardview.widget.CardView
    android:id="@+id/book3"
    app:cardBackgroundColor="#FF5722"
    android:layout_width="0dp"
    android:layout_height="0dp"
    android:layout_columnWeight="1"
    android:layout_rowWeight="1"
    android:layout_marginBottom="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp">

<LinearLayout
android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical|center_horizontal"
    android:layout_margin="15dp"
    android:orientation="vertical">

<ImageView
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_gravity="center_horizontal"
    android:src="@drawable/mrembo">

</ImageView>
<TextView
    android:id="@+id/txtZipporah"
    android:textColor="#000305"
    android:layout_width="108dp"
    android:layout_height="wrap_content"
    android:text="Dr.Zipporah Mwaniki"
    android:textSize="20dp"
    android:textAlignment="center"
    android:layout_gravity="center_horizontal">
</TextView>
</LinearLayout>
</androidx.cardview.widget.CardView>
</GridLayout>
</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>